<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	
	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% for (let i=0 ; i < products.length ; i ++ ) {%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= products[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= (products[i].image != undefined) ? products[i].image : "default-image.png" %>" alt="imagen de producto" >
						</figure>
						<article class="product-box_data">
							<h2>$ <%= products[i].price %></h2>
							<p><%= products[i].name %></p>
						</article>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>