<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creaciÃ³n'}) %>

<body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->


    <div class="container products-wrapper">

        <%- include('partials/breadCrumbs') %>

        <div class="row">
            <div class="col-4">
                <a href="/products/create" class="buy-now-button">Cargar un Producto</a>
            </div>

            <div class="col-12">
                <h3>Productos</h3>
            </div>
        </div>
        <div class="col-12">
            <div class="row product-detail">
                <div class="col-12">
                    <table id="products-list" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Imagen</th>
                                <th>Nombre</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i = 0 ; i < products.length ; i ++ ) {%>
                            <tr>
                                <td scope="row"><%= products[i].id %></td>
                                <td class="list-product-box_image">
                                    <img src="/images/products/<%= (products[i].image != undefined) ? products[i].image : "default-image.png" %>"
                                        alt="imagen de producto">
                                </td>
                                <td><%= products[i].name %></td>
                                <td><%= products[i].stock %></td>
                                <td><%= products[i].price %></td>
                                <td>
                                    <a href="/products/edit/<%= products[i].id %>"><i class="fas fa-edit fa-4x"></i>
                                    </a>

                                    <form action="/products/delete/<%= products[i].id %>?_method=delete" method="POST"
                                        style="display: inline-flex">
                                        <button type="submit"><i class="fas fa-trash-alt fa-4x"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table> 
            </div>
            </div>
        </div>

    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
                            <!-- /footer -->

                            <script>
                                $(document).ready(function () {
                                    $('#products-list').DataTable();
                                });
                            </script>

</body>

</html>