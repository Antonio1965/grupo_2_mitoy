<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2>Novedades</h2><br>
			</div>
			<% for (let i=0 ; i < resultados.length ; i ++ ) {%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= resultados[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= (resultados[i].image != undefined) ? resultados[i].image : "default-image.png" %>" alt="imagen de producto" >
						</figure>
						<article class="product-box_data">
							<h2>$ <%= resultados[i].price %></h2>
							<p><%= resultados[i].name %></p>
						</article>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>