<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: elProducto.name }) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h3><%= elProducto.name %></h3>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= (elProducto.image != undefined) ? elProducto.image : "default-image.png" %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= elProducto.description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= elProducto.name %></h2>

							<div class="input-group">
								<span class="input-group-btn">
									<button type="button" class="btn btn-default btn-number" disabled="disabled" data-type="minus" data-field="cantidad">
										<i class="fa fa-minus"></i>
									</button>
								</span>
								<input type="text" id="cantidad" name="cantidad" class="form-control input-number" value="1" min="1" max="27">
								<span class="input-group-btn">
									<button type="button" class="btn btn-default btn-number" data-type="plus" data-field="cantidad">
										<i class="fa fa-plus"></i>
									</button>
								</span>
							</div>

						
							<p class="product-detail-price">
								$ <%= elProducto.price %>
							</p>

						<a href="#" class="buy-now-button">ANADIR AL CARRITO</a>
						<hr>


					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>