<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Registracion'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>

  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h3>Contanos m√°s de vos</h3>
      </div>
    </div>
    <div class="col-8">
      <form action="?_method=PUT" method="post" enctype="multipart/form-data" >
        <div class="row product-detail">
          <div class="col-12 col-md-12">
            <label for="text" class="form-label">Nombre y Apellido</label>
            <input type="text" value="<%= elUsuario.name %>" name="name" class="form-input" id="name" aria-describedby="name">
          </div>
          
          <div class="col-12 col-md-12">
            <label for="exampleInputEmail1" class="form-label">E-mail</label>
            <input type="text" value="<%= elUsuario.email %>" name="email" class="form-input" id="exampleInputEmail1" aria-describedby="emailHelp">
          </div>

          <div class="col-12 col-md-12">
            <label for="dni" class="form-label">DNI</label>
            <input type="number" max="8" value="<%= elUsuario.dni %>" name="dni" class="form-input" id="dni">
          </div>	

          <div class="col-12 col-md-12">
            <label for="phone" class="form-label">Telefono</label>
            <input type="number" value="<%= elUsuario.phone %>" name="phone" class="form-input" id="phone">
          </div>	
          
          <div class="col-12 col-md-12">
            <label for="street" class="form-label">Direccion</label>
            <input type="text" value="<%= elUsuario.street %>" name="street" class="form-input" id="street">
          </div>	
  
          <div class="col-12 col-md-12">
            <label for="text" class="form-label">Genero</label><br>
            <label for="text" class="form-label">Masculino</label>
            <input type="radio" name="gender" value="masculino"><br>
            <label for="text" class="form-label">Femenino</label>
            <input type="radio" name="gender" value="femenino"><br><br>
          </div>

          <div class="col-12 col-md-12">
						<label for="avatar" class="form-label">Avatar</label>
						<input type="file" id="avatar" name="avatar">
          </div>
 
          <div class="col-12">
            <button type="submit" class="buy-now-button">Guardar Usuario</button>
          </div>

        </div>
      </form>
    </div>

  </div>

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>